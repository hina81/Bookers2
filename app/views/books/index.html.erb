<div class="container my-3">
  <div class="row">
    <div class="col-4">
      <!--User info-->
      <div class="container">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100, 100) %>
        <table class="table">
          <tbody>
            <tr>
              <th class="row">name</th>
              <td><strong><%= @user.name %></strong></td>
            </tr>
            <tr>
              <th class="row">introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>
          <a href="/users/sign_in" class="btn btn-outline-secondary mb-2 w-100" tabindex="-1" role="button" aria-disabled="true">edit</a>
      </div>
      
      <!--new book-->
      <div class="container">
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <p>Title</p>
          <%= f.text_field :title, class: "w-100" %>
          <p>Opinion</p>
          <%= f.text_area :body, class: "w-100" %>
          <%= f.submit 'Create Book', class: "btn btn-success mb-2" %>
        <% end %>
      </div>
    
    </div>
    
    <!--Books-->
    <div class="col-8">
      <div class="container">
        <h2>Books</h2>
        
        <table class="table">
          <thead class="w-100">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(75, 75) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
</div>