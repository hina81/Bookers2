<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-8">
      <% if @book.errors.any? %>
       <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-6">
      
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <label for='inputTitle'>Title</label><br/>
        <%= f.text_field :title, autofocus: true, id:'inputTitle', placeholder:'title', class: "w-100 mb-3"%><br/>
        <label for='inputBody'>Opinion</label><br/>
        <%= f.text_area :body, placeholder: 'opinion', class: "w-100 mb-3" %><br/>
        <%= f.submit 'Update Book', class: "btn btn-success mb-2" %>
      <% end %>
      
      <!--menu-->
      <div class="row">
        <%= link_to 'Show', book_path %>
        <p class="px-1">|</p>
        <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</div>
  