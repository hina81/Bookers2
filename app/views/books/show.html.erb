<div class="container my-3">
  <div class="row">
    <!-- left bar -->
    <div class="col-4">
      <%= render 'leftbar', book: @book, user: @user %>
    </div>
    
    <!--Books-->
    <div class="col-8">
      <div class="container">
        <h2>Book detail</h2>
        
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(75, 75) %>
                <%= @user.name %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td><a href="/users/sign_in" class="btn btn-success mb-2 w-100" tabindex="-1" role="button" aria-disabled="true">Edit</a></td>
              <td><%= link_to 'Destroy', books_path, method: :delete, class: "btn btn-danger mb-2 w-100" %></td>
            </tr>
          </body>
        </table>
        
      </div>
    </div>
  </div>
</div>