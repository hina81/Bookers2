<div class="container my-3">
  <div class="row">
 
    <!--left bar-->
    <div class="col-md-3">
      <%= render 'books/leftbar', book: @book_n, user: @user %>
    </div>

    <!--Books-->
    <div class="col-md-8 offset-md-1">
      <div class="container">
        <h2>Books</h2>
        
        <table class="table">
          <thead class="w-100">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <th>
                <%= link_to(user_path(book.user_id)) do %>
                  <%= image_tag book.user.get_profile_image(75, 75) %>
                <% end %>
              </th>
              <!--book_pathだめ-->
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
</div>